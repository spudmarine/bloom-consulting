= render "layouts/header"

.strata-small
  .row{style: "padding-top: 30px;"}
    .small-12.columns
      %h3.c-drk-gray= @team.intro_title
      %p{style: "padding-top: 5px;"}= @team.intro_copy
- employees = Employee.all
- employees.each do |employee|
  .strata-small.strata-striped
    .row{style: "padding: 20px;"}
      .small-12.medium-3.columns
        = image_tag employee.employee_image, width: "100%"
      .small-12.medium-9.columns
        .row
          .small-8.columns
            %h5
              .c-drk-gray{style: "display: inline-block;"}= employee.name + ","
              = employee.title
          .small-4.columns
            - if employee.linkedin.present?
              %h5
                %a{href: "http://" + employee.linkedin, style: "float: right; margin-left: 10px;", "data-icon" => "i"}
            - if employee.twitter.present?
              %h5
                %a{href: "http://" + employee.linkedin, style: "float: right;", "data-icon" => "h"}
        .row
          .small-12.columns
            %p{style: "padding-top: 10px;"}= employee.bio_intro
            %a
              Read More
              %span
                %small{"data-icon" => "b"}


