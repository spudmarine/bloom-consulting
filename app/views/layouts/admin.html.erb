<!DOCTYPE html>
<html>
<head>
  <title>BloomConsulting</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
	<link rel="shortcut icon" href="https://s3-us-west-2.amazonaws.com/bcg-site-assets/favicon.ico" type="image/x-icon">
	<link rel="icon" href="https://s3-us-west-2.amazonaws.com/bcg-site-assets/favicon.ico" type="image/x-icon">
</head>
<body>
  <%= render 'layouts/admin_nav' %>
  <div class="container"><%= yield %></div>
  <script>
    $(document).foundation();

    $('.datepicker').pickadate({
      format: 'mmmm dd, yyyy',
      onStart: function ()
        {
          var date = new Date();
          this.set('select', [date.getFullYear(), date.getMonth(), date.getDate()]);
        },
    });
    
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-42564530-1', 'bloomconsultinggroup.com');
    ga('send', 'pageview');

  </script>
</body>
</html>
