= render 'layouts/blog_nav'

.strata-striped
  - @posts.each do |post|
    .strata
      .row
        .small-10.small-offset-1.columns.ta-center
          %p.m-bottom-30
            %small{style: "text-transform: uppercase;"}= post.date.strftime("%B %d, %Y")
          %h2.c-blue= post.title
          %p.m-bottom-20
            by
            %span.c-drk-gray= post.author
          %p.m-bottom-30= Nokogiri::HTML.parse(post.body).css('p').first.text
          = link_to post_path(post) do
            %h3.c-orange
              %span{"data-icon" => "p"}

= render 'layouts/blog_footer'

