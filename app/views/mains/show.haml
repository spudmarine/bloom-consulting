- image = @main.hero_image_url
.large-hero{style: "background-image: url(#{image});"}
  = render 'layouts/header'
  .hero
    .row{style: "padding-top: 70px;"}
      .small-8.small-offset-2.columns
        %h1{style: "font-size: 60px; color: #fff; text-align: center;"}
          = @main.hero_title
        %h2{style: "text-align: center; padding-top: 40px; color: #fff; padding-bottom: 40px;"}
          %a.intro-arrow{"data-icon" => "b"}
%div.bgc-lght-gray{style: "padding: 50px 0px;"}
  .row
    .small-12.medium-3.columns
      %div{style: "text-align: center;"}
