.strata-small
  = form_for [:admin, @event], :html => {:multipart => true} do |f|
    .row
      - if @event.errors.any?
        .small-12.columns
          .error_explanation
            %h5
              = pluralize(@event.errors.count, "error")
              prohibited this practicearea from being saved:
            %ul
              - @event.errors.full_messages.each do |msg|
                %li= msg
    .strata-mini.bgc-white.w-100.p-relative{"data-magellan-expedition" => "fixed"}
      .row.p-top-20
        .small-12.medium-8.columns
          %h1.c-drk-gray{style: "vertical-align: middle;"} Create Event
        .small-4.medium-2.columns
          = link_to admin_events_path, class: "btn btn-block btn-l btn-empty ta-center" do
            %span.m-right-5.hide-lap{"data-icon" => "d"}
            %span.hide-palm.hide-tablet Cancel
        .small-8.medium-2.columns
          .actions
            %button.btn.btn-block.btn-l.btn-filled.ta-center Save
      .row
        .small-12.columns
          %hr.m-bottom-0
    .strata
      .row
        .small-12.medium-4.columns
          %h4.c-drk-gray Event Info
        .small-12.medium-8.columns
          .field
            = f.label :date, "Date"
            = f.text_field :date, :value => (f.object.date.strftime('%B %d, %Y') if f.object.date), class: "datepicker"
          .field
            = f.label :location, "Location"
            = f.text_field :location
          .field
            = f.label :description, "Description"
            = f.text_area :description, :rows => 4
          .field
            = f.label :link, "Event Website"
            = f.text_field :link, :placeholder => "www.eventsite.com/event"
