.strata-small
  .row
    .small-12.columns
      = link_to admin_url, class: "lh-h1" do 
        %span.m-right-5{"data-icon" => "d"}
        Return to Dashboard
  .row
    .small-12.medium-8.columns
      %h1.c-drk-gray Events
    .small-12.medium-4.columns
      = link_to new_admin_event_path, class: "btn btn-m btn-filled btn-block" do
        Add Event
        %span.f-right{"data-icon" => "N"}
  .row.m-top-20
    .small-12.columns
      %table.tbl-striped
        - @events.each do |event|
          %tr
            %td.c-drk-gray= event.date.strftime("%B %d, %Y")
            %td{style: "width: 25%;"}= event.location
            %td{style: "width: 25%;"}= event.description
            %td.ta-right{style: "width: 10%;"}
              -if event.link.present?
                %span{"data-icon" => "P"}
            %td.ta-right
              = link_to edit_admin_event_path(event), class: "m-right-50" do
                %span.m-right-5.btn-text{"data-icon" => "D"}
                Edit
              = link_to admin_event_path(event), method: :delete, data: { confirm: 'Are you sure?' } do
                %span.delete-icon.p-left-10{"data-icon" => "M"}
