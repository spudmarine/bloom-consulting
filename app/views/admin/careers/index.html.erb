<h1>Listing careers</h1>

<table>
  <thead>
    <tr>
      <th>Hero image</th>
      <th>Hero title</th>
      <th>Hero copy</th>
      <th>Intro title</th>
      <th>Intro copy</th>
      <th>Cta title</th>
      <th>Cta copy</th>
      <th>Event Title</th>
      <th>Event Intro</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @careers.each do |career| %>
      <tr>
        <td><%= image_tag career.hero_image.to_s %></td>
        <td><%= career.hero_title %></td>
        <td><%= career.hero_copy %></td>
        <td><%= career.intro_title %></td>
        <td><%= career.intro_copy %></td>
        <td><%= career.cta_title %></td>
        <td><%= career.cta_copy %></td>
        <td><%= career.event_header %></td>
        <td><%= career.event_intro %></td>
        <td><%= link_to 'Edit', edit_admin_career_path(career) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
