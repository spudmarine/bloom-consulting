.strata-small
  = form_for [:admin, @user] do |f|
    .row
      - if @user.errors.any?
        .small-12.columns
          .error_explanation
            %h5
              = pluralize(@user.errors.count, "error")
              prohibited this practicearea from being saved:
            %ul
              - @user.errors.full_messages.each do |msg|
                %li= msg
    .strata-mini.bgc-white.w-100.p-relative{"data-magellan-expedition" => "fixed"}
      .row.p-top-20
        .small-12.medium-8.columns
          %h1.c-drk-gray{style: "vertical-align: middle;"} Create New User
        .small-4.medium-2.columns
          = link_to admin_users_path, class: "btn btn-block btn-l btn-empty ta-center" do
            %span.m-right-5.hide-lap{"data-icon" => "d"}
            %span.hide-palm.hide-tablet Cancel
        .small-8.medium-2.columns
          .actions
            %button.btn.btn-block.btn-l.btn-filled.ta-center Save
      .row
        .small-12.columns
          %hr.m-bottom-0
    .strata
      .row
        .small-12.medium-4.columns
          %h4.c-drk-gray User Information
        .small-12.medium-8.columns
          .field
            = f.label :email, "Email Address"
            = f.text_field :email
          %h6.c-drk-gray.m-top-40{style: "text-transform: uppercase;"} Update Password:
          .field.m-top-20
            = f.label :password, "Enter New Password"
            = f.password_field :password
          .field.m-top-20
            = f.label :password_confirmation, "Confirm New Password"
            = f.password_field :password_confirmation

