.strata
  .row
    .small-12.columns
      %h2.c-blue.ta-center Practice Areas
  .row.m-top-20{"data-equalizer" => "true"}
    .small-12.medium-3.columns
      = link_to practiceareas_path(anchor: "ap"), class: "anchor-link" do
        %div.b-light-gray{"data-equalizer-watch" => "true"}
          - image = @practiceareas.last.pa4_image
          .practice-area-one{style: "background-image: url(#{image});"}
            .blue-overlay
          %div.p-20.ta-center
            %h5.c-drk-gray.main-title= @practiceareas.last.pa4_title
            %p.p-x-15= @practiceareas.last.pa4_home_copy
            %span.bottom-line
              %h4
                %span.c-orange{"data-icon" => "p"}
